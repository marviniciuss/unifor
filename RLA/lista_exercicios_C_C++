#include<stdio.h>

//Questão 3 - Soma de um conjunto de números. 
//Dado um conjunto de números, implemente e teste um algoritmo para calcular a soma desses números.
//Aceite apenas maior ou igual a zero.

int main() {
float N1, soma, num;
int i;
printf("Digite a quantidade de números: ");
scanf("%f",&N1);
if (N1<0) {
  printf("O valor deve ser maior ou igual a zero!");
} else {
  i=0;
  soma=0;
  while (i<N1) {
    printf("Digite o número %d: ",i+1);
    scanf("%f", &num);
    soma=soma+num;
    i=i+1;
    }
}
printf("A soma dos números é: %.2f", soma);
return 0;
}
